@model IEnumerable<ArchiveDomain.Model.Author>

@{
    ViewData["Title"] = "Автори";
}

<div class="page-content">
    <h1 class="mb-4">Автори</h1>
    <div class="mb-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Повернутися до меню</a>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">Додати нового автора</a>
        </p>
    }


    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.LastName)</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-label="@Html.DisplayNameFor(model => model.FirstName)">
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td data-label="@Html.DisplayNameFor(model => model.LastName)">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td data-label="Дії">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Деталі</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редагувати</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Видалити</a>
                        }
                        else
                        {
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Деталі</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>