@{
    ViewData["Title"] = "Створити роль";
}

<div class="page-content">
    <h1 class="mb-4">Створити нову роль</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label for="roleName" class="control-label">Назва ролі</label>
                    <input type="text" name="roleName" id="roleName" class="form-control" />
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Створити" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Назад до списку</a>
                </div>
            </form>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
        </div>
    </div>
</div>