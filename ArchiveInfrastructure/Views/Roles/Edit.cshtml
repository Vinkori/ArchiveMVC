@model ArchiveInfrastructure.ViewModels.ChangeRoleViewModel

@{
    ViewData["Title"] = "Змінити ролі користувача";
}

<div class="page-content">
    <h1 class="mb-4">Змінити ролі для @(Model.UserName ?? Model.UserEmail)</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <input type="hidden" name="userId" value="@Model.UserId" />
                <div class="form-group mb-3">
                    <h5>Email: @Model.UserEmail</h5>
                    @if (!string.IsNullOrEmpty(Model.UserName))
                    {
                        <h5>Ім'я: @Model.UserName</h5>
                    }
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Ролі користувача:</label>
                    @foreach (var role in Model.AllRoles)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="roles" value="@role.Name"
                            @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
                            <label class="form-check-label">@role.Name</label>
                        </div>
                    }
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                    <a asp-action="UserList" class="btn btn-secondary ms-2">Назад до списку</a>
                </div>
            </form>
        </div>
    </div>
</div>