@model IEnumerable<ArchiveDomain.Model.User>

@{
    ViewData["Title"] = "Список користувачів";
}

<div class="page-content">
    <h1 class="mb-4">Список користувачів</h1>

    <p>
        <a asp-action="Index" class="btn btn-secondary">До списку ролей</a>
    </p>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <p>Користувачів ще немає.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Ім'я</th>
                    <th>Email</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@(user.Name ?? user.UserName ?? "Без імені")</td>
                        <td>@user.Email</td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userId="@user.Id">Змінити ролі</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>